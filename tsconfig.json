{
  "compilerOptions": {
    "rootDirs": ["src"],
    "baseUrl": "./",
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["ES2023"],
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "node16",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
